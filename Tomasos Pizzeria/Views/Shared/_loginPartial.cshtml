@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <p class="text-dark">Välkommen tillbaka @User.Identity.Name</p>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Identity" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-info">Logga ut</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-item text-dark" asp-controller="Identity" asp-action="EditProfile">Uppdatera Profil</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Login">Logga in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Register">Regristrera dig</a>
        </li>
    }
</ul>